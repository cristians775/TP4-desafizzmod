<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="card-panel  blue darken-3" style="margin-bottom: 0;margin-top: 5%;">
            <h4 style="color:white"> Lista de productos</h4>
        </div>
        <div class="row" style="   padding: 5%;
       background: ghostwhite;
       ">

            <table class="table responsive">
                <thead>
                    <tr>
                        <th>Foto</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Descripcion</th>
                    </tr>
                </thead>
                <% if(products.length){ %>
                    <%products.forEach(function(product) {%>
                        <tr>
                            <td>
                                <img style="width: 60px;height: auto;" class="circle responsive-img large"
                                    src=<%=product.url%>
                                onerror="this.src='/img/default-img'"
                                >
                            </td>
                            <td>
                                <%=product.name%>
                            </td>
                            <td>
                                $ <%=product.price%>
                            </td>
                            <td>
                                <%=product.description%>
                            </td>

                        </tr>
                        <%});%>


                            </tbody>
            </table>

        </div>

        <% } else{ %>


            <% if(error){ %>

                <div>
                    <h3 style="color:#e53935 ">
                        <%= message %>
                    </h3>
                </div>

                <% } else{ %>
                    <div>
                        <h3 class="">No hay productos para listar</h3>
                    </div>

                    <% } %>



                        <% } %>

    </div>
</body>

</html>